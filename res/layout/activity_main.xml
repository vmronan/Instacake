<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <Button 
        android:id="@+id/authorize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="signIn" 
        android:text="@string/authorize" />
    
    <Button 
        android:id="@+id/get_feed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/authorize"
        android:onClick="getFeed" 
        android:text="@string/get_feed" />
    
    <EditText 
        android:id="@+id/new_project_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_feed"
        android:hint="@string/new_project_hint"/>
    
    
    <Button 
        android:id="@+id/new_project"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_project_title"
        android:onClick="newProject" 
        android:text="@string/new_project" />
    
    <Button 
        android:id="@+id/create_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_project"
        android:onClick="createUser" 
        android:text="create user" />
    

</RelativeLayout>
