<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    
    <Button 
        android:id="@+id/get_feed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="getFeed" 
        android:text="@string/get_feed" />
    
    <Button 
        android:id="@+id/get_projects"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_feed"
        android:onClick="getProjects" 
        android:text="@string/get_projects" />
    
    <Button 
        android:id="@+id/testRails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_projects"
        android:onClick="testRails" 
        android:text="test rails" />
    
    <Button 
        android:id="@+id/download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/testRails"
        android:onClick="download" 
        android:text="download" />
    
    <TextView 
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/download"
        android:text="not_finished"/>
    
    <Button 
        android:id="@+id/viewDownloads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:onClick="viewDownloads" 
        android:text="viewDownloads" />

</RelativeLayout>
